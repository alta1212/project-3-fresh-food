
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
@section Scripts{
    <script src="~/Scripts/Controllers/account.js"></script>
}
<div class="section">
    <div class="imgs-wrapper">
        <img src="~/assets/img/products/1.png" alt="veg" class="d-none d-lg-block">
        <img src="~/assets/img/products/14.png" alt="veg" class="d-none d-lg-block">
    </div>
    <div class="container">
        <div class="andro_auth-wrapper">

            <div class="andro_auth-description bg-cover bg-center dark-overlay dark-overlay-2" style="background-image: url('~/assets/img/auth.jpg')">
                <div class="andro_auth-description-inner">
                    <i class="flaticon-diet"></i>
                    <h2>Hello World!</h2>
                    <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                </div>
            </div>
            <div ng-app="accountSignup" class="andro_auth-form">

                <h2>Sign Up</h2>

                <form ng-controller="SignUp">

                    <div class="form-group">
                        <input maxlength="50" id="khtk" type="text" required class="form-control" ng-model="KHACH_HANG.TaiKhoan" placeholder="Username" name="username" value="">
                        <a id="errortk" ng-show="tk">Tên người dùng đã tồn tại</a>
                    </div>
                    <div class="form-group">
                        <input  maxlength="100" type="email" id="khmail" required ng-model="KHACH_HANG.Email" class="form-control form-control-light" placeholder="Email Address" name="email" value="">
                        <a id="errortk" ng-show="mail">Mail đã tồn tại</a>
                    </div>
                    <div class="form-group">
                        <input maxlength="50" id="khmk" type="password" required ng-model="KHACH_HANG.MatKhau" class="form-control" placeholder="Password" name="password" value="">
                    </div>
                    <button type="submit" ng-style="btn" id="btnsubmit" ng-click="register()" class="andro_btn-custom primary">{{btntext}}</button>

                    <div class="andro_auth-seperator">
                        <span>OR</span>
                    </div>

                    <div class="andro_social-login">
                        <button type="button" class="andro_social-login-btn facebook"><i class="fab fa-facebook-f"></i> Continue with Facebook </button>
                        <button type="button" class="andro_social-login-btn google"><i class="fab fa-google"></i> Continue with Google</button>
                    </div>

                    <p>Already have an account? <a href="login">Login</a> </p>

                </form>
            </div>

        </div>
    </div>
</div>

