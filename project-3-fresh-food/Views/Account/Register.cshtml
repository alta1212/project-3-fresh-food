
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
<div ng-controller="dangKy" class="section">
    <div class="imgs-wrapper">
        <img src="~/assets/img/products/1.png" alt="veg" class="d-none d-lg-block">
        <img src="~/assets/img/products/14.png" alt="veg" class="d-none d-lg-block">
    </div>
    <div class="container">
        <div class="andro_auth-wrapper">

            <div class="andro_auth-description bg-cover bg-center dark-overlay dark-overlay-2" style="background-image: url('https://tk16food.com/assets/img/auth.jpg')">
                <div class="andro_auth-description-inner">
                    <i class="flaticon-diet"></i>
                    <h2>Hello World!</h2>
                    <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                </div>
            </div>
            <div class="andro_auth-form">

                <h2>Sign Up</h2>

                <form method="post">

                    <div class="form-group">
                        <input type="text" ng-model="KHACH_HANG.TaiKhoan" class="form-control" placeholder="Username" name="username" value="">
                    </div>
                    <div class="form-group">
                        <input type="email" ng-model="KHACH_HANG.Email" class="form-control form-control-light" placeholder="Email Address" name="email" value="">
                    </div>
                    <div class="form-group">
                        <input type="password" ng-model="KHACH_HANG.MatKhau" class="form-control" placeholder="Password" name="password" value="">
                    </div>
                    <button type="submit" ng-click="sign()" class="andro_btn-custom primary">{{bnttext}}</button>

                    <div class="andro_auth-seperator">
                        <span>OR</span>
                    </div>

                    <div class="andro_social-login">
                        <div class="fb-login-button" style="margin-bottom:5%" scope="public_profile,email"
                             onlogin="LoginFaceBook();" data-size="large" data-button-type="continue_with"
                             data-layout="rounded" data-auto-logout-link="false" data-use-continue-as="true" data-width="390">

                        </div>

                        <button type="button" onclick='document.getElementsByClassName("abcRioButtonContentWrapper")[0].click()' class="andro_social-login-btn google"><i class="fab fa-google"></i> Continue with Google</button>
                    </div>
                    <div style="display:none" class="andro_social-login">




                        <div class="g-signin2 andro_social-login-btn" data-onsuccess="onSignIn"></div>
                    </div>  

                    <p>Already have an account? <a href="login.html">Login</a> </p>

                </form>
            </div>

        </div>
    </div>
</div>
