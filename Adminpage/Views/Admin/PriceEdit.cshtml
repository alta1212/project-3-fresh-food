
@{
    ViewBag.Title = "Sửa Giá Bán";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div ng-controller="editPrice" id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Sửa giá sản Phẩm</h4>
                        </div>
                    </div>
                    <div ng-switch="getJsonResults.ngayKetThuc !='/Date(-62135596800000)/'" class="iq-card-body">
                        <form id="addsp">
                            <div ng-switch-when="false">
                                <label for="exampleInputdate"><a style="color:red">*</a>Giá Mặc Định</label><br>
                            </div>
                            <div >
                                <label for="exampleInputdate"><a style="color:red">*</a>Tên Sản Phẩm : {{getJsonResults.tenSanPham}}</label><br>
                            </div>
                            <div class="form-group">
                                <label>Mã Giá Bán:</label>
                                <input readonly ng-model="getJsonResults.maGiaBan" type="text" required class="form-control">
                            </div>
                            <div ng-switch-when="true">
                                <div class="form-group">
                                    <label for="exampleInputdate">Ngày bắt đầu</label>
                                    <input type="date" ng-model="getJsonResults.ngayBatDau"  class="form-control" id="exampleInputdate" value="" min="{{MinDate}}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputdate">Ngày kết Thúc</label>
                                    <input ng-model="getJsonResults.ngayKetThuc"  type="date" class="form-control" id="exampleInputdate" value="">
                                </div>
                            </div>

                           
                            <div class="form-group">
                                <label>Giá bán :</label>
                                <input ng-model="getJsonResults.gia" required type="number" min="10000" class="form-control">
                            </div>

                            <button ng-click="Edit()" class="btn btn-primary">Sửa</button>
                            <button type="reset" class="btn btn-danger">Làm mới</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

