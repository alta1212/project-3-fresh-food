
@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div ng-controller="editPro" id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Thêm sản Phẩm</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <form id="edit">
                            <div class="form-group">
                                <label>Mã sản phẩm:</label>
                                <input value="{{info.MaSanPham}}" readonly type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Tên sản phẩm:</label>
                                <input ng-model="info.tensanpham"  type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Loại Sản Phẩm:</label>
                                <select ng-model="info.MaLoaiSanPham" class="form-control"  id="exampleFormControlSelect1">
                                    <option value="{{i.MaLoaiSanPham}}" ng-repeat="i in ProductCatetory">{{i.TenLoaiSanPham}}</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Hình Ảnh:</label>
                                <div class="custom-file">
                                    <input type="file" id="file" class="custom-file-input" accept="image/png, image/jpeg">
                                    <label class="custom-file-label">Choose file</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Đơn vị tính:</label>
                                <div class="custom-file">
                                    <input ng-model="info.DonViTinh"  type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Giá bán :</label>
                                <input ng-model="info.Giaban" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Mô Tả:</label>
                                <textarea ng-model="info.MoTa"  class="form-control" rows="4"></textarea>
                            </div>
                            <button ng-click="edit()" class="btn btn-primary">Thêm mới</button>
                            <button type="reset" class="btn btn-danger">Làm mới</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

