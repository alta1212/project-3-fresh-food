
@{
    ViewBag.Title = "Loại Sản Phẩm";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <div ng-controller="managerProductType" id="content-page" class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Loại Sản Phẩm</h4>
                            </div>
                            <div class="iq-card-header-toolbar d-flex align-items-center">
                                <a href="/SanPhamAdmin/AddProductType" class="btn btn-primary">Thêm loại sản phẩm</a>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <div class="table-responsive">
                                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table class="data-tables table table-striped table-bordered dataTable no-footer" style="width:100%" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 10%;">No</th>
                                                        <th style="width: 15%;">ProductType Number</th>
                                                        <th style="width: 15%;">ProductType Name</th>
                                                        <th style="width: 50%;">ProductType Description</th>
                                                        <th style="width: 10%;">ProductType Sum</th>
                                                        <th style="width: 10%;">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="i in getJsonResults">
                                                        <td>{{$index + 1}}</td>
                                                        <td>{{i.maloaisanpham}}</td>
                                                        <td>{{i.tenloaisanpham}}</td>
                                                        <td>{{i.mota}}</td>
                                                        <td>
                                                            <p class="mb-0">{{i.soLuong}}</p>
                                                        </td>
                                                        <td>
                                                            <div class="flex align-items-center list-user-action">
                                                                <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="admin-add-book.html"><i class="ri-pencil-line"></i></a>
                                                                <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" ng-click="deleteProductType(i.MaLoaiSanPham)" href="#"><i class="ri-delete-bin-line"></i></a>
                                                            </div>
                                                        </td>
                                                    </tr>


                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate">
                                            <ul class="pagination">
                                                <li class="paginate_button page-item active" ng-repeat="item in list">
                                                    <a href="#" aria-controls="DataTables_Table_0" data-dt-idx="{{item}}" tabindex="0" ng-class="{'active-task': count == $index + 1}" ng-click="changePage(item)" class="page-link">{{item}}</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

