
@{
    ViewBag.Title = "ManagerProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <div id="content-page" class="content-page" ng-controller="managerProduct">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Product Lists</h4>
                            </div>
                            <div class="iq-card-header-toolbar d-flex align-items-center">
                                <a href="admin-add-book.html" class="btn btn-primary">Add New book</a>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <div class="table-responsive">
                                <table class="data-tables table table-striped table-bordered" id="table-product" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="width: 3%;">No</th>
                                            <th style="width: 12%;">Product Image</th>
                                            <th style="width: 15%;">Product Name</th>
                                            <th style="width: 15%;">Product Catrgory</th>
                                            <th style="width: 18%;">Product Description</th>
                                            <th style="width: 7%;">Product Price</th>
                                            <th style="width: 7%;">Product pdf</th>
                                            <th style="width: 15%;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="i in getJsonResults" >
                                            <td>{{$index + 1}}</td>
                                            <td><img class="img-fluid rounded" src="{{i.hinhanh}}" alt=""></td>
                                            <td>{{i.Tensanpham}}</td>
                                            <td>{{i.tenloaisanpham}}</td>
                                            <td>
                                                <p class="mb-0">{{i.mota}}</p>
                                            </td>
                                            <td>{{i.giaban}}</td>
                                            <td><a href="book-pdf.html"><i class="ri-file-fill text-secondary font-size-18"></i></a></td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="admin-add-book.html"><i class="ri-pencil-line"></i></a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" href="#"><i class="ri-delete-bin-line"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                        

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

