
@{
    ViewBag.Title = "ListUser";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div ng-controller="getListUser" id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Danh sách nhân viên</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a href="/Admin/addNV" class="btn btn-primary">Thêm nhân viên</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_length" id="DataTables_Table_0_length">
                                            <label>
                                                Show <select ng-change="changeview()" ng-model="pagesize" name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="custom-select custom-select-sm form-control form-control-sm">
                                                    <option ng-selected="true" value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <div id="DataTables_Table_0_filter" class="dataTables_filter">
                                            <label>
                                                Tìm kiếm:
                                                <input type="search" id="searchname" class="form-control form-control-sm" placeholder="Tìm kiếm ở đây" aria-controls="DataTables_Table_0">
                                            </label>
                                        </div>
                                    </div>
                                </div><div class="row">
                                    <div class="col-sm-12">
                                        <table class="data-tables table table-striped table-bordered dataTable no-footer" style="width:100%" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                            <thead>
                                                <tr>
                                                    <th style="width: 1%;">TT</th>
                                                    <th style="width: 10%;">Ảnh</th>
                                                    <th style="width: 36%;">Họ Và Tên</th>
                                                    <th style="width: 10%;">Vị trí</th>
                                                    <th style="width: 5%;">Phái</th>
                                                    <th style="width: 10%;">Ngày Sinh</th>
                                                    <th style="width: 20%;">Quê Quán</th>
                                                    <th style="width: 7%;">SĐT</th>
                                                    <th style="width: 10%;">Email</th>
                                                    <th style="width: 8%;">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="i in UserInfo">
                                                    <td>{{$index + 1}}</td>
                                                    <td><img class="img-fluid rounded" src="{{i.hinhanh}}" alt=""></td>
                                                    <td>{{i.tennhanvien}}</td>
                                                    <td>{{i.tenloainhanvien}}</td>
                                                    <td>
                                                        <p class="mb-0">{{i.gioitinh}}</p>
                                                    </td>
                                                    <td>{{i.ngaysinh|filterdate|date:'dd/MM/yyyy'}}</td>
                                                    <td>{{i.diachi}}</td>
                                                    <td>{{i.sodienthoai}}</td>
                                                    <td>{{i.email}}</td>
                                                    <td>
                                                        <div class="flex align-items-center list-user-action">
                                                            <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="/Admin/UpdateProfileUser#!?manhanvien={{i.manhanvien}}"><i class="ri-pencil-line"></i></a>
                                                            <a class="bg-primary" data-placement="top" title=""  data-original-title="Delete" href="#" ng-click="DeleteUser(i.manhanvien)"><i class="ri-delete-bin-line"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>


                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="col-sm-12 col-md-7">
                                    <div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate">
                                        <ul class="pagination">
                                            <li class="paginate_button page-item previous disabled" id="DataTables_Table_0_previous">
                                                <a href="#" aria-controls="DataTables_Table_0" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
                                            </li>
                                            <li class="paginate_button page-item active">
                                                <a href="#" aria-controls="DataTables_Table_0" data-dt-idx="1" tabindex="0" class="page-link">1</a>
                                            </li>
                                            <li class="paginate_button page-item next disabled" id="DataTables_Table_0_next">
                                                <a href="#" aria-controls="DataTables_Table_0" data-dt-idx="2" tabindex="0" class="page-link">Next</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

